{
  "name": "wedeploy",
  "version": "2.0.0",
  "description": "WeDeploy Api",
  "engines": {
    "node": ">=7.6.0"
  },
  "repository": "wedeploy/api-js",
  "scripts": {
    "build": "gulp build",
    "release": "npm run format && NODE_ENV=production npm run build",
    "format": "prettier --single-quote --no-bracket-spacing --trailing-comma es5 --write \"{src/**/*.js,test/**/*.js,*.js}\" && eslint --fix \"{src/**/*.js,test/**/*.js,*.js}\"",
    "lint": "gulp lint",
    "prepublish": "publish-please guard && npm run release",
    "publish-please": "publish-please",
    "test:ci": "gulp ci",
    "test": "gulp test && gulp test:node"
  },
  "main": "build/node/api-min.js",
  "module": "build/browser/api-min.js",
  "files": [
    "build/node/api-min.js",
    "build/browser/api-min.js"
  ],
  "keywords": [
    "metal"
  ],
  "dependencies": {
    "form-data": "^2.1.2",
    "metal": "^2.0.0",
    "metal-ajax": "^2.0.0",
    "metal-promise": "^2.0.0",
    "metal-storage": "^1.1.0",
    "metal-structs": "^1.0.0",
    "metal-uri": "^2.2.0",
    "request": "^2.67.0",
    "socket.io-client": "^1.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-metal": "^4.1.0",
    "babel-preset-metal-resolve-source": "^1.0.2",
    "chai": "^3.5.0",
    "del": "^2.2.2",
    "eslint": "^3.19.0",
    "eslint-config-liferay": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-metal": "^2.0.2",
    "gulp-sourcemaps": "^2.6.0",
    "nock": "^9.0.2",
    "prettier": "^1.2.2",
    "publish-please": "^2.3.0",
    "run-sequence": "^1.2.2",
    "sinon": "^1.17.2",
    "webpack": "^2.5.1",
    "webpack-node-externals": "^1.6.0"
  },
  "react-native": {
    "http": false,
    "request": false
  }
}
